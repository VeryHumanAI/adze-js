{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "paths": {
      "@/": ["src"]
    },
    "rootDirs": ["./cli", "./src"],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": ["cli/**/*", "src/**/*"]
}
