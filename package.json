{
  "name": "adze-js",
  "version": "0.1.0",
  "description": "AI-driven prompt refinement NPM package",
  "main": "dist/cli/index.js",
  "type": "commonjs",
  "types": "dist/cli/index.d.ts",
  "bin": {
    "adze-js": "ts-node-dev --respawn --transpile-only ./src/adze-js.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/cli/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\"",
    "start": "node dist/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VeryHumanAI/adze-js.git"
  },
  "keywords": [
    "AI",
    "prompts",
    "OpenAI",
    "GPT",
    "refinement",
    "JavaScript"
  ],
  "author": "Conroy Whitney <konreu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VeryHumanAI/adze-js/issues"
  },
  "homepage": "https://github.com/VeryHumanAI/adze-js#readme",
  "dependencies": {
    "@types/node": "^18.15.11",
    "commander": "^8.3.0",
    "dotenv": "^10.0.0",
    "openai": "^0.27.0",
    "prompts": "^2.4.2",
    "source-map-support": "^0.5.21",
    "ts-node-dev": "^1.1.12",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/prompts": "^2.4.4",
    "axios": "^1.3.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5"
  }
}
